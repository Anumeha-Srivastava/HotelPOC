
@{
    ViewBag.Title = "Hotel Search";
}

@section featured {
    @using (Html.BeginForm("SearchHotel", "Home"))
    {
        <section class="featured" style="font-size:12px;">
            <div class="content-wrapper">
                <hgroup class="page-header" style="font-size:20px;">
                    <h2>Book Domestic & International Hotels</h2>
                </hgroup>
                <p>
                    Find best deals across million of hotels across globe
                </p>
                <div class="row">
                    <div class="col-sm-10">
                        <div class="form-group">
                            <label for="ddlLocation">Select Address</label>
                            <select id="ddlLocation" name="ddlLocation" style="width:100%; height:30px; font-size:12px;">
                                <option value="abc">DFW</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="datetimepickerCheckIn">Check In</label>
                            <div class="container" style="padding-left:0px;">
                                <div class="row">
                                    <div class='col-sm-3'>
                                        <input type="date" name="checkIn">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 float-right">
                        <div class="form-group">
                            <label for="datetimepickerCheckOut">Check Out</label>
                            <div class="container" style="padding-left:0px;">
                                <input type="date" name="checkOut">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="ddlTotalGuest">No of Guest</label>
                            <select id="ddlTotalGuest" name="ddlTotalGuest" style="width:100%; height:30px; font-size:12px;">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4 float-right">
                        <div class="form-group">
                            <label for="ddlNoOfRooms">No of Rooms</label>
                            <select id="ddlNoOfRooms" name="ddlNoOfRooms" style="width:100%; height:30px; font-size:12px;">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 float-right">

                        <input type="submit" value="Search Hotel" />

                    </div>
                </div>
            </div>

        </section>
    }
}
